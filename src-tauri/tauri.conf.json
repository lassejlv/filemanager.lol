{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "File Manager",
  "version": "0.1.0",
  "identifier": "com.filemanager.lol",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "File Manager",
        "width": 2000,
        "height": 900,
        "titleBarStyle": "Overlay",
        "resizable": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}
